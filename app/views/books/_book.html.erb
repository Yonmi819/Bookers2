

<h2 class="mt-3">New book</h2>
<% if book.errors.any? %>
  <div class="alert">
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
        <% end %>
    </ul>
  </div>
  <% end %>
  <%= form_with model: book, url: books_path , method: :post do |f| %>
    <div class="form-group">
      <%= f.label :Title %><br>
        <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :Opinion %><br>
        <%= f.text_area :body %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book',class:"btn btn-sm btn-success" %>
    </div>
    <% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/users', user: @user %>
        <%= render 'book', book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= link_to @book.user.name ,user_path(@user.id) %>
            </td>
            <td>
              <%= link_to @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td class="favorite_btn">
              <%= render "favorites/form", book: @book %>
            </td>
            <td>
              <p>コメント数：
                <%= @book.book_comments.count %>
              </p>
            </td>
            <% if  @book.user.id == current_user.id %>
              <td>
                <%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success"  %>
              </td>
              <td>
                <%= link_to 'Destroy', book_path(@book.id), class: "btn btn-sm btn-danger" ,method: :delete, data: {confirm:  "本当に削除しますか"} %>
              </td>
              <% end %>
          </tr>
        </tbody>
      </table>
      <!--部分テンプレート化-->
      <div class="comments_area">
        <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>
      </div>
      <div class="comments_index">
        <%= render 'book_comments/index', book: @book %>
      </div>
    </div>
  </div>
</div>
  
   
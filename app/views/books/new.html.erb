
<p id="notice"></p> 
<div class="container px-5 px-sm-0">
<div class="row">

<div class="col-md-3">
<script src="https://kit.fontawesome.com/c47b0638d0.js" crossorigin="anonymous"></script>  
      
  <h2>User info</h2>
  <table class="table">
  <tbody>
    
<tr>
<th>
<%= image_tag current_user.get_profile_image(100,100) %>
</th>
</tr>
  
<tr>
<th>name</th>
<th><%= current_user.name %></th>
</tr>
  
<tr>
<th>introduction</th>
<th><%= current_user.introduction %></th>
</tr>

</tbody>
</table>

<div class="row">
 <a class="btn btn-outline-secondary btn-block " href="edit_user_path">
    <i class="fa-regular fa-user"></i></a>
  
</div>

<h2 class="mt-3">New book</h2>

<%= form_with model: @book, url: books_path do |f| %>
 
 <div class="form-group">
 <%= f.label :Title %><br>
 <input class="form-control book_title" type="text" name="book[title]" id="book_title">
 </div>
 
 <div class="form-group">
 <%= f.label :Opinion %><br>
 <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
 </div>
 
  <div class="form-group">
  <%= f.submit 'Create Book',class:"btn btn-sm btn-success" %>
  </div>
  
<% end %>
</div>
     


<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <script src="https://kit.fontawesome.com/c47b0638d0.js" crossorigin="anonymous"></script>
      <%= render 'users', user: @user %>
        <%= render 'books/book', book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @book.each do |book| %>
            <tr>
              <td>
                <%= link_to  user_path(@user.id) do %>
                  <%= image_tag book.user.get_profile_image(70,70) %>
                    <% end %>
              </td>
              <td>
                <%= link_to book.title ,book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <td>
                <p><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></p>
              </td>
              </tr>
            <% end %>
            
            
        </tbody>
      </table>
    </div>
  </div>
</div>


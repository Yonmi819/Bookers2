<div class="container">
  <div class="row">
  <h2>Search Results</h2>
  <table class="table table-hover table-inverse">
   
    <% if @range == "User" %>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(70,70) %>
              </td>
              <td>
                <strong><%= user.name %></strong>
              </td>
              <td></td>
            </tr>
            <% end %>
        </tbody>
       
        <% else %>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= image_tag book.user.get_profile_image(70,70) %>
                </td>
                <td>
                  <%= book.title %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
              <% end %>
          </tbody>
          <% end %>
  </table>
</div>
</div>